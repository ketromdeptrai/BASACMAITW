<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="samsung.android.test.fragment.FragmentAddStudents">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subject"
            android:padding="16dp" />
        <Spinner
            android:id="@+id/spinnersub"
            android:layout_width="match_parent"
            android:popupBackground="@color/background"
            android:layout_height="wrap_content">
        </Spinner>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Class"
            android:padding="16dp" />
        <Spinner
            android:id="@+id/spinner_class2"
            android:layout_width="match_parent"
            android:popupBackground="@color/background"
            android:layout_height="wrap_content">
        </Spinner>
        <EditText
            android:id="@+id/addstudent_studentID"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:hint="Student ID"
            android:inputType="number"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/addstudent_studentName"
            android:padding="16dp"
            android:hint="Student name"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnAddStudent"
            android:layout_marginTop="8dp"
            android:text="Add student"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.Button"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>
